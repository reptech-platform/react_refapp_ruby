pipeline {
    agent {
        label 'vetpet'
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git
                git credentialsId: 'github1', url: 'https://github.com/reptech-platform/react_refapp_ruby.git', branch: 'main'
            }
        }
        stage('build') {
            steps {
                sh "npm install"
                sh "npm run build" 
            }
        }
        stage ('copy to s3 bucket') {
            steps {
                sh "aws s3 sync build/ s3://react-refapp-ruby"
            }
        }
    }
}

